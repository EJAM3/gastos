<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    
    <link rel="icon" type="image/png" href="gold-logo.png">
    <link rel="apple-touch-icon" href="gold-logo.png">
    <link rel="manifest" href="manifest.json">
    <meta name="theme-color" content="#d4af37">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    
    <title>Finance Master Gold</title>
    <style>
        :root {
            --bg: #1a1a1a; /* Fondo oscuro para resaltar el dorado */
            --card-bg: #242424;
            --text: #e0e0e0;
            --accent: #d4af37; /* Dorado */
            --shadow: #000000;
            --light: #333333;
        }
        body { background-color: var(--bg); font-family: -apple-system, sans-serif; margin: 0; color: var(--text); padding-bottom: 40px; }
        
        /* Banner de Refuerzo (Cada 5 min) */
        #reinforcement {
            position: fixed; top: -100px; left: 0; width: 100%; 
            background: var(--accent); color: #000; padding: 15px;
            text-align: center; font-weight: 800; transition: 0.5s; z-index: 2000;
            box-shadow: 0 4px 15px rgba(0,0,0,0.5); font-size: 0.9rem;
        }
        #reinforcement.show { top: 0; }

        .logo-container { text-align: center; padding: 30px 0; }
        .logo-container img { width: 100px; filter: drop-shadow(0 0 10px var(--accent)); }

        nav { display: flex; justify-content: space-around; padding: 15px; background: var(--card-bg); sticky: top; z-index: 100; border-bottom: 1px solid var(--accent); }
        nav span { font-weight: 800; color: #777; font-size: 0.7rem; cursor: pointer; }
        nav span.active { color: var(--accent); text-shadow: 0 0 5px var(--accent); }

        .card { width: 90%; max-width: 400px; background: var(--card-bg); padding: 20px; border-radius: 20px; margin: 20px auto; box-shadow: 5px 5px 15px var(--shadow); border: 1px solid #333; }
        
        .health-bar { width: 100%; height: 8px; background: #111; border-radius: 4px; margin: 10px 0; overflow: hidden; }
        .health-fill { height: 100%; width: 50%; background: var(--accent); transition: 0.8s ease-in-out; }

        input { width: 100%; padding: 15px; border-radius: 12px; border: none; margin-bottom: 10px; background: #111; color: var(--accent); font-size: 1rem; text-align: center; box-sizing: border-box; }
        .neubtn { width: 100%; padding: 15px; border-radius: 12px; border: 1px solid var(--accent); background: transparent; color: var(--accent); font-weight: 800; cursor: pointer; text-transform: uppercase; }
        .neubtn:active { background: var(--accent); color: #000; }
    </style>
</head>
<body>

    <div id="reinforcement">¬°Tu disciplina financiera es tu mayor activo! üí∞</div>

    <div class="logo-container">
        <img src="gold-logo.png" alt="Logo">
    </div>

    <nav>
        <span class="active">üìù REGISTRO</span>
        <span>üìã PLAN</span>
        <span>üìä HISTORIAL</span>
    </nav>

    <div class="card">
        <div style="text-align: center; margin-bottom: 10px; font-weight: 900; letter-spacing: 2px;">SALDO DISPONIBLE</div>
        <div class="health-bar"><div class="health-fill" id="bar"></div></div>
        <input type="number" placeholder="Monto $">
        <button class="neubtn">Registrar Gasto Gold</button>
    </div>

    <script>
        // SISTEMA DE REFUERZO CADA 5 MINUTOS (Instrucci√≥n Guardada)
        const frases = [
            "¬°El √©xito financiero est√° en tus manos!",
            "Cada registro es una semilla de riqueza.",
            "¬°Eres excelente administrando!",
            "La disciplina hoy es la libertad ma√±ana.",
            "¬°Sigue as√≠, vas por muy buen camino!"
        ];

        function lanzarRefuerzo() {
            const banner = document.getElementById('reinforcement');
            banner.innerText = frases[Math.floor(Math.random() * frases.length)];
            banner.classList.add('show');
            setTimeout(() => banner.classList.remove('show'), 6000);
        }

        // Intervalo de 5 minutos
        setInterval(lanzarRefuerzo, 300000);
        
        // Registro del Service Worker
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('./sw.js');
        }
    </script>
</body>
</html>
